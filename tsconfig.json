{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["ES2020"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@client": ["./src/client"],
      "@client/*": ["./src/client/*"]
    }
  },
  "include": ["src/", "tools/scripts/src"],
  "exclude": ["node_modules"]
}
