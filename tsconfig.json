{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["ES2020"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist/",
    "declaration": true,
    "alwaysStrict": true,
    "strict": true,
    "incremental": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "types": ["node"],
    "rootDir": "src"
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
